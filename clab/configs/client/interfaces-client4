auto lo
iface lo inet loopback
    
auto eth1

# VLAN 300 - SRL EDA
auto eth1.300
iface eth1.300
    address 10.30.0.14/24
    address fd00:fdfd:0:3000::14/64

# VLAN 313 - SRL EDA
auto eth1.314
iface eth1.314
    address 10.30.3.14/24
    address fd00:fdfd:0:3004::14/64
    post-up ip r a 10.30.0.0/16 via 10.30.4.1 dev eth1.314
    post-up ip -6 r a fd00:fdfd::/32 via fd00:fdfd:0:3004::1 dev eth1.314